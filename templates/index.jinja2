{% import "templates/macros.jinja2" as macros with context %}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Word Smashing - Addicting and Fun Word Puzzle Game</title>
    <meta name="description"
          content="An Utterly Addicting Word Game, Fun For Everyone! Play This Addicting New Word Puzzle, Now For Free!">

    <meta name="keywords" content="puzzle games, word finder, crossword, free online puzzle games, word puzzle game">
    <meta property="og:title" content="Word Smashing - Addicting and Fun Word Puzzle Game">
    <meta property="og:url" content="http://www.wordsmashing.com">
    <meta property="og:image" content="http://www.wordsmashing.com/img/wordsmashing_icon128.png">
    <meta property="og:description"
          content="Play Word Smashing! The Utterly Addicting and Fun Word Puzzle Game, Now For Free!">
    <meta property="og:type" content="game">
    <meta property="og:site_name" content="Word Smashing">
    <meta property="fb:admins" content="337972272904903">

    {{ macros.headers(ws, highscores, achievements, blocked_spaces) }}
    <script type="text/javascript">
      function showHelp(){
          modal.open({content: $('#instructions').html()});
      }
      $(function(){
        showHelp();
        $('#closehelpbtn').html("Continue");
      });
    </script>
</head>
<body>
    {{ macros.fbstuff() }}
<div id="pagebody">
    <div id="container">
        <div id="main">
        	<div id="logo">
                <img src="/static/img/wordsmashing_logo.png" alt="Word Smashing" title="Word Smashing" width="250" height="184"/>

		        <div id="login">
                {{ macros.loginoutbutton() }}
                    {{ macros.jplayer() }}
			    </div>
	        </div>
            <table id="gametable" border="1">
                <tr>
                    <td>

                    </td>

                </tr>
            </table>
            <span class="fb-like" data-href="https://www.facebook.com/WordSmashing" data-send="true" data-width="450" data-show-faces="true"></span>
            {{ macros.shareBtnsHorizontal() }}
            <div id="showscore0">
                <button style="display: none"></button>
            </div>
            <div id="showscore1">
                <button style="display: none"></button>
            </div>
            <div id="showscore2">
                <button style="display: none"></button>
            </div>
            <div id="showscore3">
                <button style="display: none"></button>
            </div>
        </div>
        <div id="gameoptions">
            {{ macros.standardgameoptions() }}
            <div id="help">
                <button class="btn btn-large btn-danger" onclick="showHelp()" type="button">?</button>
            </div>
        </div>
        <div id="bannerAdd">
            <script type="text/javascript"><!--
            google_ad_client = "ca-pub-7026363262140448";
            /* word game vert */
            google_ad_slot = "3713734958";
            google_ad_width = 160;
            google_ad_height = 600;
            //-->
            </script>
            <script type="text/javascript"
                    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>

        </div>

        <div id="instructions" style="display:none">
            <h1 style="display:none">Word Smashing</h1>
            <p class="lead" style="display:none">Word smashing is a free online word search puzzle.</p>
            <p class="lead"><b>Instructions:</b><br/>
                Make words! lots of words! two at once or heaps in a row for bonus points!<br/>
                Get words up, down, forward and backwards!<br/>
                On easy, get words with 2+ letters, on medium 3+, Hard 4+!<br/>
                To move, click a letter and click a space!<br/>
                You can move if there's a clear path!<br/>
                Each turn 3 more letters appear, when the board fills up its game over!<br/>
                Looking for a harder challenge? <a href="/timed" title="Play Word Smashing Time Trials">Play Word Smashing Time Trials</a>.<br/>
                Some people &amp; place names don't count!<br/>
            </p>
            <button id="closehelpbtn" style="float:left" class="btn btn-large btn-success" onclick="modal.close()" type="button">Play Now!</button>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
        <div id="btm">
            <script type="text/javascript"><!--
            google_ad_client = "ca-pub-7026363262140448";
            /* big h default */
            google_ad_slot = "3155331752";
            google_ad_width = 728;
            google_ad_height = 90;
            //-->
            </script>
            <script type="text/javascript"
                    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
        </div>
    </div>

    <div class="clear">
    </div>
    {{ macros.footer() }}
	<div class="clear">
	</div>
</div>

</body>
</html>
