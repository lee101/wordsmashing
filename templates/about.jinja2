            google_ad_height = 90;
            //-->
            </script>
            <script type="text/javascript"
                    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>


        </div>
    </div>

    <div class="clear">
    </div>
    {{ macros.footer() }}
    <div class="clear">
    </div>
</div>
</body>
</html>
